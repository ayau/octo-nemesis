<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>



<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
	<% if !@event.date || !@event.start_time || !@event.end_time %>
    <% else %>
  <b>Time:</b>
  <%= @event.date %>, <%= @event.start_time.strftime("%I:%M%p") %> - <%= @event.end_time.strftime("%I:%M%p") %>
  <% end %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
