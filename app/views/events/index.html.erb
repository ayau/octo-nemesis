    <% for e in @events %>
        <article class='event'>
            <header>
                <h3><%= e.name %></h3>
                <input type='button' class='edit_event btn btn-danger' value='edit' onclick='window.location = "/events/<%= e.id %>/edit"'/>
                <p class='date'>Thu (10/28)</p>
            </header>
            <div class='details'>
                <p>10:30pm - 2:00am</p>
                <p><%= e.description %></p>
                <% if !e.photo? %>
                    <img class='photo' src='http://dictionaryproject.files.wordpress.com/2012/04/t300-red_solo_cup.jpg?w=500'/>
                <% else %>
                    <img class='photo' src='<%= e.photo %>'/>
                <% end %>
                <div class='invited'>
                    <p>20 rushes invited</p>
                    <ul>
                        <li><a>Brandon</a></li>
                        <li><a>Joe</a></li>
                        <li><a>Sam</a></li>
                        <li><a>Random Person</a></li>
                    </ul>
                <input type='button' class='btn btn-success' value='invite'/>
                </div>
            </div>
        </article>
    <% end %>
</section>